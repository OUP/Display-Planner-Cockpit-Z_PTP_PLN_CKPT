<core:FragmentDefinition xmlns="sap.m" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:table="sap.ui.table" xmlns:f="sap.f" xmlns:core="sap.ui.core">
    <smartTable:SmartTable
        entitySet="zptp_c_mat_list"
        smartFilterId="_matlistfilterID"
        useExportToExcel="true"
        showFullScreenButton="true"
        fullScreenToggled="fullScreenToggledPress"
        beforeExport="onBeforeExport"
        useVariantManagement="false"
        useTablePersonalisation="true"
        header="Material List"
        showRowCount="true"
        persistencyKey="SmartTableRefApp_Explored"
        enableAutoBinding="false"
        requestAtLeastFields="PackInfo"
        class="sapUiResponsiveContentPadding"
    >
        <!-- layout data used to make the table growing but the filter bar fixed -->
        <smartTable:layoutData>
            <FlexItemData growFactor="1" baseSize="0%" />
        </smartTable:layoutData>
        <table:Table visibleRowCountMode="Auto" columnResize="fnColumnResize" rowSelectionChange="onPressMat" selectionBehavior="Row" selectionMode="Single">
            <table:columns>
                <table:Column width="100px" hAlign="Begin">
                    <table:customData>
                        <core:CustomData key="p13nData" value='\{"columnKey": "PackInfo", "columnIndex":"6"}' />
                    </table:customData>
                    <Text text="PackInfo" />
                    <table:template>
                        <Link text="{PackInfo}" press="handleLinkPress" />
                    </table:template>
                </table:Column>
            </table:columns>
        </table:Table>
    </smartTable:SmartTable>
</core:FragmentDefinition>
